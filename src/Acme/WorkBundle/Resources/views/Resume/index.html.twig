{% extends '::base.html.twig' %}

{% block title %}Your filters{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets '@AcmeWorkBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block body %}
  <h1>Your job filters</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Location</th>
          <th>Salary</th>
          <th>Job position</th>
          <th>Job Categories</th>
          <th>Prefered Language</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for key,resume in resumes %}
        <tr>
          <td><a href="{{ path('work_showResume', { 'id': resume.id }) }}">{{ key+1 }}</a></td>
          <td>{{ resume.location.name }}</td>
          <td>{{ resume.salary.level }}</td>
          <td>{{ resume.jobPosition.name }}</td>
          <td>
            <ul>
              {% for ca in resume.categories %}
                <li>{{ ca.name }}</li>
              {% endfor %}
            </ul>
          </td>
          <td>
            <ul>
              {% for la in resume.languages %}
                <li>{{ la.name }}</li>
              {% endfor %}
            </ul>
          </td>
          <td>
            <a href="{{ path('work_updateResume', { 'id': resume.id }) }}">Update</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}